<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #fff;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.AfterLogin">
   <bottom>
      <AnchorPane prefHeight="800.0" prefWidth="1200.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="table" layoutX="14.0" layoutY="36.0" prefHeight="434.0" prefWidth="720.0">
              <columns>
                <TableColumn prefWidth="75.0" text="Name" />
                  <TableColumn prefWidth="75.0" text="Current stock" />
                <TableColumn prefWidth="75.0" text="Price" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <TextField fx:id="searchTextField" alignment="CENTER_RIGHT" layoutX="13.0" layoutY="473.0" prefHeight="25.0" prefWidth="522.0" promptText="search" />
            <Button fx:id="logoutButton" layoutX="13.0" layoutY="746.0" mnemonicParsing="false" onAction="#logout" prefHeight="42.0" prefWidth="75.0" text="Logout" />
            <Button fx:id="addItemToCartButton" layoutX="536.0" layoutY="473.0" mnemonicParsing="false" onAction="#addItemToCart" prefHeight="25.0" prefWidth="198.0" text="Add Item to Cart" />
            <Button layoutX="13.0" layoutY="695.0" mnemonicParsing="false" prefHeight="42.0" prefWidth="75.0" text="Manage Inventory" textAlignment="CENTER" textOverrun="LEADING_WORD_ELLIPSIS" wrapText="true" />
            <Button fx:id="sellButton" layoutX="1116.0" layoutY="507.0" mnemonicParsing="false" onAction="#sellCurrentCart" prefHeight="40.0" prefWidth="70.0" text="Sell" />
            <TableView layoutX="745.0" layoutY="36.0" prefHeight="462.0" prefWidth="440.0">
              <columns>
                <TableColumn prefWidth="75.0" text="Name" />
                  <TableColumn prefWidth="75.0" text="Qty" />
                <TableColumn prefWidth="75.0" text="Price" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <Label layoutX="14.0" layoutY="14.0" prefHeight="17.0" prefWidth="88.0" text="Inventory" textFill="#2900ff" />
            <Label layoutX="748.0" layoutY="14.0" text="Cart" textFill="#2900ff" />
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
